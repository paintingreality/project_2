<h1 class="createpost">Create a New Post</h1>
<p class='createpost'>Make the car Gods proud!</p>


<%= form_for @post do |p| %>
  <%= p.text_field :make, placeholder: "Make", class: 'postform' %>
  <%= p.text_field :model, placeholder: "Model", class: 'postform' %>
  <%= p.file_field :cars, placeholder: "Picture", class: 'postform' %>
  <%= p.text_field :year, placeholder: "Year", class: 'postform' %>
  <%= p.submit class: 'postform'%>
<% end %>
